<section id="contact" class="min-h-screen px-2 flex flex-col items-start justify-center gap-4">
    <h2 class="text-4xl font-bold text-yellow-700">Contact</h2>
    <form class="space-y-4 w-full">
        <fieldset class="space-y-4">
            <div class="flex flex-col gap-1">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" required placeholder="Enter your name" class="border border-stone-200 bg-stone-200/10 px-2 py-1 rounded-md w-full outline-none focus:border-yellow-700" />
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required placeholder="Enter your email" class="border border-stone-200 bg-stone-200/10 px-2 py-1 rounded-md w-full outline-none focus:border-yellow-700" />
            </div>
            <div>
                <label for="message">Message</label>
                <textarea name="message" id="message" required placeholder="Enter your message" class="w-full h-44 border border-stone-200 bg-stone-200/10 px-2 py-1 rounded-md outline-none focus:border-yellow-700" />
            </div>
        </fieldset>
        <button type="submit" class="w-full px-2 py-1 font-bold bg-stone-200 rounded-md text-stone-900 hover:bg-stone-300 duration-300 ease-in-out transition-all text-xl">Send</button>
    </form>
</section>