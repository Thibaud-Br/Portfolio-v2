--- 
import { Github, Protonmail, Linkedin, Readdotcv } from 'simple-icons-astro'
---

<section id="home" class="flex h-screen flex-col items-center justify-center gap-12">
    <div class="flex flex-col items-center justify-center gap-2">
        <h1 class="text-7xl font-bold">Hi, I'm <span class="text-yellow-700">Thibaud</span></h1>
        <p class="text-lg">Frontend developer based in Nantes</p>
    </div>
    <div class="flex items-center justify-center gap-10">
        <a href="https://github.com/thibaudbrault" class="rounded-full border border-transparent bg-green-700 p-4 transition-colors duration-300 ease-in-out hover:border-stone-200 hover:bg-green-600">
            <Github class="size-10" />
        </a>
        <a href="https://www.linkedin.com/in/thibaud-brault/" class="rounded-full border border-transparent bg-blue-700 p-4 transition-colors duration-300 ease-in-out hover:border-stone-200 hover:bg-blue-600">
            <Linkedin class="size-10" />
        </a>
        <a href={`mailto:${import.meta.env.PUBLIC_EMAIL}`} class="rounded-full border border-transparent bg-purple-700 p-4 transition-colors duration-300 ease-in-out hover:border-stone-200 hover:bg-purple-600">
            <Protonmail class="size-10" />
        </a>
        <a href="/cv.pdf" class="rounded-full border border-transparent bg-red-700 p-4 transition-colors duration-300 ease-in-out hover:border-stone-200 hover:bg-red-600">
            <Readdotcv class="size-10" />
        </a>
    </div>
</section>
