---
import Layout from '@/layouts/Layout.astro';

const {pathname} = Astro.url
const title = "Page not found"
const description = "Page not found"
---
<Layout {title} {description}>
    <div class="w-screen h-screen bg-stone-900 text-stone-200 flex flex-col justify-center items-center gap-6">
        <h1 class="text-5xl font-atkinson">There is no route for <span class="text-yellow-600">{pathname}</span></h1>
        <a class="bg-stone-200 text-stone-900 px-6 py-2 rounded-md font-semibold border border-transparent transition duration-300 ease-in-out hover:bg-transparent hover:text-stone-200 hover:border-stone-200" href="/">Go Home</a>
    </div>
</Layout>